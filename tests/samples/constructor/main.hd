import std.io as io
import std.string

class Pixel:
    r : u8
    g : u8
    b : u8

    def init : void
        r = 0
        g = 0
        b = 0

        io::println("build pixel 1")

    def init : void
        @rv : u8
        @gv : u8
        @bv : u8

        r = rv
        g = gv
        b = bv
        io::println("build pixel 2")

    def println : void
        io::println("($r, $g, $b)")

    def destroy : void
        io::println("destroying pixel")

def main : void
    p = Pixel()
    p2 = Pixel(25, 25, 0)
    p2.println()

    for i = 0; i < 10; ++i:
        p3 = Pixel(25, 25, 0)
        p3.println()

    println("ending...")

    i = 1
    if i > 0:
        println("if")
        p4 = Pixel()
    else:
        println("else")
        p4 = Pixel()
